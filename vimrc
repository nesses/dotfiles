" Directory setup
:set directory=~/.vim/swap
:set backupdir=~/.vim/backup
:set undodir=~/.vim/undo
:set undofile

" Feel
:set ignorecase

" Look
:set tabstop=4
:set nowrap
:set number
:set showtabline=2
:set laststatus=2
:set cursorline
:set statusline=\[%F\]%y\[%L\]

" Keymapping
:map t <Esc>:tabnew<CR>
:map " :NERDTreeToggle
